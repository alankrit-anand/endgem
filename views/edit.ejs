<%- include("partials/header", {i:i}) %>

<div class="container">
	<h1>Edit Material</h1>
	<div class="form">
		<form action="/documents/<%=document._id%>?_method=PUT" method="POST">
			<div class="form-group" >
				<input class="form-control" type="text" name="document[name]" value="<%=document.name%>" >
			</div>
			<div class="form-group">
				<input onclick="return confirm('Save Changes?')" class="btn btn-lg btn-primary btn-block" type="submit">
			</div>	
		</form>
		<a href="/documents/<%=document._id%>">Go Back</a>
	</div>
	
</div>

<%- include("partials/footer") %>